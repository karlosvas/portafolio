{
   "compilerOptions": {
      // Para establecer la versión de ECMAScript a la que se compilará el código.
      "target": "ES2020",
      "module": "ES2020",
      // Para establecer el directorio de entrada y salida.
      "rootDir": "./src",
      "outDir": "./dist",
      // Para depurar y debugear el código.
      "sourceMap": true,
      // Para habilitar la verificación de tipos.
      "strict": true,
      // Para verificar que no se use any.
      "moduleResolution": "node",
      "noImplicitAny": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "noImplicitReturns": true,
      "esModuleInterop": true,
      "skipDefaultLibCheck": true,
      "forceConsistentCasingInFileNames": true
   }
}
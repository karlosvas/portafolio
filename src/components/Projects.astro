---
const { data } = Astro.props;
---

<h1 class="pt-12 text-2xl font-bold">
  {data.projects.title}
</h1>

<div
  class="grid h-auto w-full grid-cols-1 items-center justify-between gap-5 pt-5 sm:grid-cols-2 md:w-3/4 md:grid-cols-3 lg:w-1/2 xl:w-2/4 mb-20"
>
  {
    Object.keys(data.projects).map((key) => {
      if (key === "title") return;

      const { name, description } = data.projects[key];

      return (
        <>
          <div
            style={`background-image: url(/img/${key}.webp)`}
            class={`h-72 rounded-xl bg-opacity-10 bg-center transform transition-all duration-300 hover:scale-105 bg-cover ${key === "vintweet" ? "grid-row-1-3 h-full min-h-80 bg-rigth" : ""}`}
          >
            <a
              class="h-full w-full"
              href={`https://github.com/karlosvas/${key}`}
              target="_blank"
              aria-label={`Ir a proyecto de ${name}`}
            >
              <div class="flex h-full flex-col justify-end bg-gradient-to-t from-black p-5 text-slate-200">
                <h2 class="font-bold">{name}</h2>
                <p>{description}</p>
              </div>
            </a>
          </div>
        </>
      );
    })
  }
</div>

<style>
  .grid-row-1-3 {
    grid-row: 1 / 3;
  }
</style>

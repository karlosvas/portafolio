---
const { data } = Astro.props
const { urlProyect, nameProyect } = Astro.props as { lang: string; urlProyect: string; nameProyect: string; }
---

<div 
  style={`background-image: url(/img/${nameProyect}.png)`}
  class={`h-72 rounded-xl bg-opacity-10 bg-center transform transition-all duration-300 hover:scale-105 overflow-hidden bg-cover ${nameProyect === "vintweet" ? "grid-row-1-3 h-full bg-rigth" : ""}`}
>
  <a class="h-full w-full" href={urlProyect} target="_blank" aria-label={`Ir a proyecto de ${nameProyect}`}>
    <div class="flex h-full flex-col justify-end bg-gradient-to-t from-black p-5 text-slate-200">
      <h2 class="font-bold">
        {data.projects[nameProyect].name}
      </h2>
      <p>
        {data.projects[nameProyect].description}
      </p>
    </div>
  </a>
</div>

<style>
  .grid-row-1-3 {
    grid-row: 1 / 3;
  }
</style>

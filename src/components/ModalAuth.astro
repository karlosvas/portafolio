   w-full h-80 md:h-1/2 lg:w-1/3 z-50 flex justify-center flex-col hidden">

   <button id="btnClose" class="bg-red-500 border-4 border-red-400 px-2 absolute right-3 top-3 font-semibold  rounded-md text-black select-none">X</button>
   <h1 id='formTitle' class="text-center  text-2xl font-semibold mb-10"></h1>
   <input id='email' type="text" placeholder="email" class="bg-slate-500 mx-10 my-3 p-2">
   <input id='password' type="text" placeholder="password" class="bg-slate-500 mx-10 my-3 p-2">
   <p id='resData' class=" font-bold bottom-12 absolute left-1/2 transform -translate-x-1/2"></p>
   <div class="mt-10">
      <nav>
         <ul class="flex flex-row justify-center align-middle">
            <li>
               <svg id='authGithub' class="hover:text-purplePal transition-color duration-200 mx-2 icon icon-tabler icons-tabler-outline icon-tabler-brand-github" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M9 19c-4.3 1.4 -4.3 -2.5 -6 -3m12 5v-3.5c0 -1 .1 -1.4 -.5 -2c2.8 -.3 5.5 -1.4 5.5 -6a4.6 4.6 0 0 0 -1.3 -3.2a4.2 4.2 0 0 0 -.1 -3.2s-1.1 -.3 -3.5 1.3a12.3 12.3 0 0 0 -6.2 0c-2.4 -1.6 -3.5 -1.3 -3.5 -1.3a4.2 4.2 0 0 0 -.1 3.2a4.6 4.6 0 0 0 -1.3 3.2c0 4.6 2.7 5.7 5.5 6c-.6 .6 -.6 1.2 -.5 2v3.5" />
               </svg>
            </li>
            <li>
               <svg id='authGmail' class="hover:text-purplePal icon icon-tabler icons-tabler-filled icon-tabler-mail mx-2" xmlns="http://www.w3.org/2000/svg"  width="24"  height="24"  viewBox="0 0 24 24" fill="currentColor"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M22 7.535v9.465a3 3 0 0 1 -2.824 2.995l-.176 .005h-14a3 3 0 0 1 -2.995 -2.824l-.005 -.176v-9.465l9.445 6.297l.116 .066a1 1 0 0 0 .878 0l.116 -.066l9.445 -6.297z" /><path d="M19 4c1.08 0 2.027 .57 2.555 1.427l-9.555 6.37l-9.555 -6.37a2.999 2.999 0 0 1 2.354 -1.42l.201 -.007h14z" />
               </svg>
            </li>
         </ul>
      </nav>
   </div>
</div>

<script type="module">
   import { validateEmail, validatePassword, validateLocalAuth } from '/dist/functions/auth-login.js';
   import { githubSingIn } from '/dist/functions/oauth2-0.js'
   
   // Eventos de validación de los campos de entrada de el email && password.
   const handleEnterKey = (event) => {
      if (event.key === 'Enter') {
         // Le pasamos el el email, el password y el tipo para validarlo, se logeará oresgistrará en local.
         validateLocalAuth(validateEmail("email"), validatePassword("password"), document.getElementById('formTitle').textContent)
         event.preventDefault();
      }
   };
   
   // Asignar la función a los eventos de teclado para ambos campos de entrada
   document.getElementById('email').addEventListener('keydown', handleEnterKey);
   document.getElementById('password').addEventListener('keydown', handleEnterKey);
   // Autentificación con Github
   document.getElementById('authGithub').addEventListener('click', githubSingIn)
</script>


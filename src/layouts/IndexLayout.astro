---
const { title } = Astro.props;
import "../styles/global.css";
---

<!doctype html>
<html lang="es" class="dark">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="Carlos V치squez S치nchez portafolio de desarrollo de software"
      content="Portafolio de Carlos V치squez S치nchez, mostrando sus proyectos, habilidades en desarrollo de software"
    />
    <meta name="viewport" content="width=device-width" />
    <link rel="shortcut icon" href="/favicon.svg" type="image/svg+xml" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <script src="https://challenges.cloudflare.com/turnstile/v0/api.js?render=explicit" defer></script>
    <script src="https://platform.linkedin.com/badges/js/profile.js" async defer type="text/javascript"></script>
    <style>
      html {
        overflow-x: hidden;
        scroll-behavior: smooth;
      }
      html::-webkit-scrollbar {
        width: 0.5rem;
        background-color: #6166ff49;
      }

      html::-webkit-scrollbar-thumb {
        background-color: #5156edd3;
        border-radius: 100px;
      }

      body {
        overflow-x: hidden;
        font-family: "Roboto", sans-serif;
        font-weight: 400;
        font-style: normal;
      }

      @media (prefers-reduced-motion: reduce) {
        html {
          scroll-behavior: auto;
        }
      }
    </style>
  </head>
  <body>
    <div class="cf-turnstile" data-sitekey="0x4AAAAAAA1R3eULw-muNS8T" data-size="invisible"></div>
    <slot />
    <script type="module">
      // Inicializar Turnstile Invisible
      document.addEventListener("DOMContentLoaded", function () {
        turnstile.render(".cf-turnstile", {
          sitekey: "0x4AAAAAAA1R3eULw-muNS8T",
          size: "invisible",
        });
      });
    </script>
  </body>
</html>
